{{#if isValid}}

<div class="row">
    {{#each docs}}
    <div class="col-md-4">
      <div class="card mb-3 h-100">
        <img src="{{this.thumbnail}}" class="card-img-top" alt="Producto" style="object-fit: cover; height: 200px;">
        <div class="card-body">
          <h5 class="card-title">{{this.title}}</h5>
          <p class="card-text">ID: {{this._id}}</p>
          <p class="card-text">Precio: ${{this.price}}</p>
          <p class="card-text">Stock: {{this.stock}}</p>
          <p class="card-text">CÃ³digo: {{this.code}}</p>
          <div class="">
            
          </div>
          {{!-- <button class="btn btn-primary agregar-carrito" data-id="{{this.id}}">Agregar al carrito</button> --}}
            <div class="d-flex align-items-start input-group mb-3">
                <form  method="post" action="/api/carts/{{this.cartId}}/products/{{this._id}}" >
                    <label class="input-group-text" for="cantidad">Cantidad</label>
                    <input type="number" class="form-control" id="cantidad" name="quantity" value="1" min="1">
                    
                    <input type="text" id="_id" style="display:none;", name={{this._id}}>
                    <input type="submit" value="Agregar al carrito" class="btn btn-primary"/>
                </form>
            </div>
          
          <a href="/products/{{this._id}}" class="btn btn-secondary ver-detalle" data-id="{{this.id}}">Ver detalle</a>
        </div>
      </div>
    </div>
    {{/each}}
  </div>

  <div class="pagination-container">
    {{#if hasPrevPage}}
      <a href="{{prevLink}}" class="page-link">Anterior</a>
    {{/if}}
    {{#each pageNumbers}}
      {{#if this.isCurrentPage}}
        <span class="page-link current-page">{{this.page}}</span>
      {{else}}
        <a href="{{this.link}}" class="page-link">{{this.page}}</a>
      {{/if}}
    {{/each}}
    {{#if hasNextPage}}
      <a href="{{nextLink}}" class="page-link">Siguiente</a>
    {{/if}}
  </div>

{{/if}}




